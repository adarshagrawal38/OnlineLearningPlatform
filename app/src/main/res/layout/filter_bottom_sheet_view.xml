<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Courses"
            android:padding="12dp"
            android:layout_gravity="center"
            android:textColor="@color/secondColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/closeButtonBottomSheet"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="center"
            android:textColor="@color/secondColor"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_close"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/brightGrey"/>


    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textColor="@color/secondColor"
            android:layout_height="wrap_content"
            android:text="Category"
            android:padding="20dp"
            android:layout_gravity="center"

            />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="16sp"

            android:textColor="@color/secondColor"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:padding="20dp"
            android:layout_gravity="center"

            />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="16sp"

            android:textColor="@color/secondColor"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leval"
            android:padding="20dp"
            android:layout_gravity="center"

            />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:textColor="@color/secondColor"
            android:layout_height="wrap_content"
            android:text="Language"
            android:padding="20dp"
            android:layout_gravity="center"

            />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textColor="@color/secondColor"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:padding="20dp"
            android:layout_gravity="center"

            />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_gravity="center"
            android:background="@drawable/round_corner_button_bg"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <Button
            android:layout_margin="20dp"
            android:background="@drawable/round_corner_button_bg_second"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="apply"
            android:layout_gravity="center"
            android:textStyle="bold"

            />

    </LinearLayout>


</LinearLayout>