<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView

        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="My Courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        android:elevation="4dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/logo"
                android:id="@+id/trendingCourseBanner"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/trendingCourseTitle"
                    android:textStyle="bold"
                    android:text="CBSE Nursery"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/secondColor"
                    android:padding="8dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <SeekBar
                    android:saveEnabled="false"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarDefaultDelayBeforeFade="@integer/config_navAnimTime"
                    android:max="100"
                    android:progress="60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondColor"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="60% Completed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RatingBar
                    android:rating="4"
                    android:isIndicator="true"
                    android:progressTint="@color/yellow"
                    android:numStars="5"
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    />




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:elevation="4dp"
            android:layout_weight="1"
            android:layout_margin="10dp"

            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/logo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="CBSE Class 1"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/secondColor"
                        android:padding="8dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <SeekBar
                        android:scrollbarDefaultDelayBeforeFade="@integer/config_navAnimTime"
                        android:nestedScrollingEnabled="false"
                        android:max="100"
                        android:progress="60"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/secondColor"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="60% Completed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RatingBar
                        android:rating="4"

                        android:isIndicator="true"
                        android:progressTint="@color/yellow"
                        android:numStars="5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        />




                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    </LinearLayout>
    </ScrollView>
</LinearLayout>