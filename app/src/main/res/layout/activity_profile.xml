<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView

            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Update Display Picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_user"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:drawableLeft="@drawable/ic_photo"
                android:drawablePadding="12dp"
                android:textSize="18sp"
                android:background="@drawable/round_corner_button_bg"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="4dp"
                android:gravity="center"
                android:text="Choose Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="Basic Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                android:drawableLeft="@drawable/ic_user_small"
                android:background="@drawable/rounded_corner_edit_text"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="15sp"

                android:layout_gravity="center"
                android:gravity="left"
                android:padding="15sp"
                android:hint="John"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:drawableLeft="@drawable/ic_user_small"
                android:background="@drawable/rounded_corner_edit_text"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="15sp"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="15sp"
                android:hint="Doe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:drawableLeft="@drawable/ic_mail"
                android:background="@drawable/rounded_corner_edit_text"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="15sp"

                android:layout_gravity="center"
                android:gravity="left"
                android:padding="15sp"
                android:hint="johndoe@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <EditText
                android:drawableLeft="@drawable/ic_edit"
                android:background="@drawable/rounded_corner_edit_text"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="15sp"

                android:layout_gravity="center"
                android:gravity="left"
                android:padding="15sp"
                android:hint="John"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <EditText
                android:drawableLeft="@drawable/ic_twitter"
                android:background="@drawable/rounded_corner_edit_text"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="15sp"

                android:layout_gravity="center"
                android:gravity="left"
                android:padding="15sp"
                android:hint="Twitter Link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:drawableLeft="@drawable/ic_facebook"
                android:background="@drawable/rounded_corner_edit_text"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:drawablePadding="15sp"

                android:layout_gravity="center"
                android:gravity="left"
                android:padding="15sp"
                android:hint="Facebook Link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


                <EditText
                    android:drawableLeft="@drawable/ic_linkedin"
                    android:background="@drawable/rounded_corner_edit_text"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:drawablePadding="15sp"

                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="15sp"
                    android:hint="Linkedin Link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>




            </LinearLayout>

            <Button
                android:layout_margin="20dp"
                android:background="@drawable/round_corner_button_bg_second"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"
                android:layout_gravity="center"
                android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>